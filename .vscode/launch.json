            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/RazorRen.Sample.MVC/Views"
            }
        },
        {
            "name": "Launch Pages",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/RazorRen.Sample.Pages/bin/Debug/netcoreapp2.0/RazorRen.Sample.Pages.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/RazorRen.Sample.Pages",
