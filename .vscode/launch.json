                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Pages": "${workspaceFolder}/src/RazorRen.Sample.Pages/Pages"
            }
        },
    ]
}